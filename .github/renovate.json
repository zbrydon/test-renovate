{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "configMigration": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "skuba v12.14.1 and pnpm v10.17",
      "matchPackageNames": ["skuba"],
      "allowedVersions": ">=12.4.1",
      "matchCurrentVersion": "<12.4.1",
      "additionalBranchPrefix": "skuba-pnpm-",
      "separateMajorMinor": false
    },
    {
      "groupName": "skuba v12.14.1 and pnpm v10.17",
      "matchPackageNames": ["pnpm"],
      "allowedVersions": ">=10.17.0",
      "matchCurrentVersion": "<10.17.0",
      "additionalBranchPrefix": "skuba-pnpm-",
      "separateMajorMinor": false
    },
    {
      "groupName": "serverless",
      "matchManagers": ["npm", "custom.regex"],
      "matchPackageNames": ["serverless"],
      "separateMajorMinor": false
    },
    {
      "matchManagers": ["npm"],
      "matchDepNames": ["dd-trace"],
      "allowedVersions": ">=5.81.0"
    },
    {
      "matchManagers": ["npm"],
      "matchDepNames": ["dd-trace"],
      "matchCurrentVersion": "5.80.0",
      "allowedVersions": "5.79.0"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)serverless(\\..*)?\\.ya?ml$/"],
      "matchStrings": [
        "frameworkVersion:\\s*['\"](?<currentValue>[^'\"]+)['\"]"
      ],
      "depNameTemplate": "serverless",
      "datasourceTemplate": "npm"
    }
  ],
  "postUpdateOptions": ["yarnDedupeFewer", "pnpmDedupe"],
  "prCreation": "immediate",
  "prHourlyLimit": 10,
  "semanticCommitScope": "",
  "semanticCommitType": "deps"
}
