{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "configMigration": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "skuba v12.14.1 and pnpm v10.17",
      "matchPackageNames": ["skuba", "pnpm"],
      "allowedVersions": ">=12.4.1 || >=10.17.0",
      "additionalBranchPrefix": "skuba-pnpm-",
      "separateMajorMinor": false
    },
    {
      "groupName": "serverless",
      "matchManagers": ["npm"],
      "matchPackageNames": ["serverless"],
      "separateMajorMinor": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)serverless(\\..*)?\\.ya?ml$/"],
      "matchStrings": [
        "frameworkVersion:\\s*['\"](?<currentValue>[^'\"]+)['\"]"
      ],
      "depNameTemplate": "serverless",
      "datasourceTemplate": "npm"
    }
  ],
  "postUpdateOptions": ["yarnDedupeFewer", "pnpmDedupe"],
  "prCreation": "immediate",
  "prHourlyLimit": 10,
  "semanticCommitScope": "",
  "semanticCommitType": "deps"
}
